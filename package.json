{
  "name": "react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-motion": "^0.5.2",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "bootstrap": "^4.1.1",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build": "npm run build:css && GENERATE_SOURCEMAP=false react-scripts build",
    "build:css": "node-sass-chokidar src/assets/styles/app.scss -o src/assets/styles",
    "eject": "react-scripts eject",
    "poll": "CHOKIDAR_USEPOLLING=true npm run start",
    "start": "npm-run-all -p watch:css start:js",
    "start:js": "PORT=3000 react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "watch:css": "npm run build:css && node-sass-chokidar src/assets/styles/app.scss -o src/assets/styles --watch --recursive"
  }
}
