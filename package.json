{
  "name": "create-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express": "^4.16.1",
    "lodash": "^4.17.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap": "^4.0.0-beta",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.1",
    "react-scripts": "^1.0.14"
  },
  "scripts": {
    "build": "npm run build:css && react-scripts build && npm run build:server",
    "build:css": "node-sass-chokidar ./src/assets/styles/app.scss -o ./src/assets/styles",
    "build:server": "BABEL_ENV=production babel ./src -d ./build/src --presets=es2015,react-app",
    "eject": "react-scripts eject",
    "start": "npm-run-all -p watch:css start:js",
    "start:js": "react-scripts start",
    "start:server": "node ./build/src/server.js",
    "test": "react-scripts test --env=jsdom",
    "watch:css": "npm run build:css && node-sass-chokidar ./src/assets/styles/app.scss -o ./src/assets/styles --watch --recursive"
  }
}
