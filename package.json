{
  "name": "react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "~4.17.5",
    "react": "~16.3.2",
    "react-dom": "~16.3.2",
    "react-router-dom": "~4.2.2"
  },
  "devDependencies": {
    "bootstrap": "~4.1.0",
    "cross-env": "~5.1.4",
    "node-sass-chokidar": "~1.2.2",
    "npm-run-all": "~4.1.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "build": "npm run build:css && cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:css": "node-sass-chokidar ./src/assets/styles/app.scss -o ./src/assets/styles",
    "eject": "react-scripts eject",
    "poll": "cross-env CHOKIDAR_USEPOLLING=true npm run start",
    "start": "npm-run-all -p watch:css start:js",
    "start:js": "cross-env PORT=3000 react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "watch:css": "npm run build:css && node-sass-chokidar ./src/assets/styles/app.scss -o ./src/assets/styles --watch --recursive"
  }
}
